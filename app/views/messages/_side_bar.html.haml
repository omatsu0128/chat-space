.Side-bar
  .Side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icon
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.top-items__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .Side-bar__group-list
    - current_user.groups.each do |group|
      .group-boxes
        = link_to group_messages_path(group) do
          .group-boxes__name
            = group.name
          .group-boxes__new-message
            = group.show_last_message